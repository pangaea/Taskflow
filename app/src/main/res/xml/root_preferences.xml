<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/home_title">

        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@color/color_pref_tasks_default"
            android:key="color_pref_tasks"
            android:title="@string/home_tasks_title"
            app:colorChoices="@array/colors_values"
            app:colorShape="circle" />

        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@color/color_pref_notes_default"
            android:key="color_pref_notes"
            android:title="@string/home_notes_title"
            app:colorChoices="@array/colors_values"
            app:colorShape="circle" />

        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@color/color_pref_lists_default"
            android:key="color_pref_lists"
            android:title="@string/home_lists_title"
            app:colorChoices="@array/colors_values"
            app:colorShape="circle" />

    </PreferenceCategory>

